<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".messagedigest.MessageDigestActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="@string/cteMessageDigest" />

    <Spinner
        android:id="@+id/spinnerMessageDigest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/messageDigestAlgorithms"
        android:layout_weight="0" />

    <EditText
        android:id="@+id/editTextMessageDigest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:ems="10"
        android:hint="Input text ..."
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/buttonGenerateHash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:onClick="generateHash"
        android:text="@string/btnGenerateHash" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewMessageDigestResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>